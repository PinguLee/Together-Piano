{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/app/components/*": ["frontend/app/components/*"],
      "@/app/hooks/*": ["frontend/app/hooks/*"],
      "@/app/interfaces/*": ["frontend/app/interfaces/*"],
      "@/app/styles/*": ["frontend/app/styles/*"],
      "@/app/utils/*": ["frontend/app/utils/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "frontend/.next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
